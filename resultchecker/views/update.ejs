        <form action="result/updateresult" method="post"> <!-- /action_page.php -->
            <div class="form-group pt-2">
              <label for="id">Enter student register no:</label>
              <input type="text" class="form-control" placeholder="Student resgister no" id="id" name="student_id" required>
              <div class="valid-feedback">Valid.</div>
              <div class="invalid-feedback">Please fill out this field.</div>
            </div>
            <div class="form-group pt-2">
              <label for="grade">Class:</label>
              <input type="text" class="form-control" placeholder="Class" id="grade" name="grade" required>
              <div class="valid-feedback">Valid.</div>
              <div class="invalid-feedback">Please fill out this field.</div>
            </div>
            <div class="form-group pt-2">
              <label for="term">Term:</label>
              
              <select class="form-control" id="term" name="term" required>
                <option value="First Term">First Term</option>
                <option value="Second Term">Second Term</option>
                <option value="Third Term">Third Term</option>
              </select>
              <div class="valid-feedback">Valid.</div>
              <div class="invalid-feedback">Please fill out this field.</div>
            </div>
            <div class="form-group pt-2">
              <label for="session">Session:</label>
              <select class="form-control" id="session" name="session" required>
                <option value="2023/24">2023/24</option>
              </select>
              <div class="valid-feedback">Valid.</div>
              <div class="invalid-feedback">Please fill out this field.</div>
            </div>
            <div class="form-group">
                <label for="subject">Select Subject:</label>
                <select class="form-control" id="subject" name="subject" required>
                  <option value="English">Engish</option>
                  <option value="Mathematics">Mathematics</option>
                  <option value="Biology">Biology</option>
                  <option value="Computer Studies">Computer Studies</option>
                  <option value="Geography">Geography</option>
                  <option value="Agricultural Science">Agricultural Science</option>
                  <option value="Economics">Economics</option>
                  <option value="IRS/CRS">IRS/CRS</option>
                  <option value="Arabic">Arabic</option>
                  <option value="Physics">Physics</option>
                  <option value="Chemistry">Chemistry</option>
                  <option value="Further Mathematics">Further Mathematics</option>
                  <option value="Government">Government</option>
                  <option value="Literature in English">Literature in English</option>
                  <option value="Financial Accounting">Financial Accounting</option>
                  <option value="Commerce">Commerce</option>
                </select>
                <div class="valid-feedback">Valid.</div>
                <div class="invalid-feedback">Please fill out this field.</div>
            </div>

            <div class="form-group pt-2">
                <label for="score">Score:</label>
                <input type="number" class="form-control" placeholder="Score" id="score" name="score" required>
                <div class="valid-feedback">Valid.</div>
                <div class="invalid-feedback">Please fill out this field.</div>
            </div>

            <div class="form-group">
                <label for="remark">Select Remark:</label>
                <select class="form-control" id="remark" name="remark" required>
                  <option value="Excellent">Excellent</option>
                  <option value="Very Good">Very Good</option>
                  <option value="Good">Good</option>
                  <option value="Fair">Fair</option>
                  <option value="Poor">Poor</option>
                  <option value="Failed">Failed</option>
                </select>
                <div class="valid-feedback">Valid.</div>
                <div class="invalid-feedback">Please fill out this field.</div>
            </div>


            <button type="submit" class="btn btn-primary">Save record</button>
              
            
